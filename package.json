{
    "name": "livecodescript",
    "description": "This extension adds several features to handle livecodescript files",
    "displayName": "Livecode Language Support",
    "version": "1.0.0",
    "author": "FerrusLogic",
    "publisher": "Ferruslogic",
    "license": "SEE LICENSE IN LICENSE.md",
    "icon": "images/icon.png",
    "categories": [
        "Programming Languages",
        "Snippets",
        "Linters",
        "Formatters"
    ],
    "keywords": [
        "Livecode",
        "Livecodescript"
    ],
    "engines": {
        "vscode": "^1.41.0"
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:livecodescript"
    ],
    "contributes": {
        "configuration": {
            "title": "Livecodescript",
            "type": "object",
            "properties": {
                "livecodescript.suggest.basic": {
                    "type": "boolean",
                    "default": true,
                    "description": "test1"
                },
                "livecodescript.validate.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "test2"
                },
                "livecodescript.validate.executablePath": {
                    "type": "string",
                    "default": "C:\\lc-server\\livecode-server.exe",
                    "description": "Executable Path"
                },
                "livecodescript.validate.run": {
                    "type": "string",
                    "enum": [
                        "onSave",
                        "onType"
                    ],
                    "default": "onSave",
                    "description": "Run on"
                }
            }
        },
        "languages": [
            {
                "id": "livecodescript",
                "aliases": [
                    "Livecodescript",
                    "Livecode",
                    "LCS"
                ],
                "extensions": [
                    ".livecodescript",
                    ".lc",
                    ".lch"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "livecodescript",
                "scopeName": "source.livecodescript",
                "path": "./syntaxes/livecodescript.tmLanguage.json",
                "tokenTypes": {
                    "entity.name.type.instance.jsdoc": "other",
                    "entity.name.function.tagged-template": "other",
                    "meta.import string.quoted": "other",
                    "variable.other.jsdoc": "other"
                }
            }
        ],
        "semanticTokenScopes": [
            {
                "language": "livecodescript",
                "scopes": {
                    "property": [
                        "variable.other.property.livecodescript"
                    ],
                    "property.readonly": [
                        "variable.other.constant.property.livecodescript"
                    ],
                    "variable": [
                        "variable.other.readwrite.livecodescript"
                    ],
                    "variable.readonly": [
                        "variable.other.constant.object.livecodescript"
                    ],
                    "function": [
                        "entity.name.function.livecodescript"
                    ],
                    "namespace": [
                        "entity.name.type.module.livecodescript"
                    ],
                    "variable.defaultLibrary": [
                        "support.variable.livecodescript"
                    ],
                    "function.defaultLibrary": [
                        "support.function.livecodescript"
                    ]
                }
            }
        ],
        "snippets": [
            {
                "language": "livecodescript",
                "path": "./snippets/livecode.code-snippets"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ferruslogic/vscode-livecodescript.git"
    },
    "bugs": {
        "url": "https://github.com/ferruslogic/vscode-livecodescript/issues"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile"
    },
    "dependencies": {
        "vscode-nls": "^4.0.0",
        "which": "^2.0.2"
    },
    "devDependencies": {
        "@types/node": "14.x",
        "@types/vscode": "^1.41.0",
        "@types/which": "^2.0.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.3.0"
    }
}